<h2 class="center-align"> <%= job.title %> </h2>

<div class="row">
  <div class="col s6">
    <div class="card">
      <div class="card-content">
        <span class="card-title">Description</span>
        <p><%= job.description %></p>
      </div>
    </div>
  </div>
  <div class="col s6">
    <div class="card">
      <div class="card-content">
        <span class="card-title">Status</span>
        <div class="job-owner">
          <%= render 'job_info' %>
        </div>
      </div>
    </div>
  </div>
</div>
